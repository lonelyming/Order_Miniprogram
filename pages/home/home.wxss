/* pages/home/home.wxss */
swiper,
swiper image {
  height: 400rpx
}

.search_root {
  display: flex;
  flex-direction: row;
  padding: 20rpx;
  align-items: center;
}

.search_input {
  flex: 1;
  height: 75rpx;
  border: 2px solid gray;
  border-radius: 30rpx;
}

.search_image {
  width: 80rpx;
  height: 80rpx;
  margin-left: 20rpx;
}

.category_root {
  padding: 10rpx 10rpx;
  display: flex;
  justify-content: space-around;
}

.category_item {
  display: flex;
  flex-direction: column;
  /* width: 120rpx;
  height: 120rpx; */
  margin: 20rpx;
  text-align: center;
}

.category_image {
  width: 120rpx;
  height: 120rpx;
}

.category_word {
  font-size: 30rpx;
  margin-top: 10rpx;
}

.hot_tip {
  margin-top: 10rpx;
  display: flex;
  justify-content: space-between;
}

.hot_tip_title {
  font-size: 40rpx;
  margin-left: 30rpx;
}

.hot_tip_more {
  padding-right: 20rpx;
  padding-left: 30rpx;
}

.hot_list {
  display: flex;
  margin: 10rpx 30rpx;
  padding-bottom: 10rpx;
  border-bottom: 1px solid gainsboro;
}

.hot_list_image {
  width: 200rpx;
  height: 140rpx;
  min-width: 200rpx;
  margin-right: 25rpx;
}

.hot_list_name {
  font-size: 35rpx;
  width: 500rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.hot_list_sell {
  font-size: 30rpx;
  color: gray;
}

.hot_list_price {
  font-size: 35rpx;
  color: orange;
}