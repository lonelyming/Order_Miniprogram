/* pages/person/person.wxss */
.userinfo {
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: rgb(114, 111, 111);
  padding-bottom: 100rpx;
}

.login{
  margin-top: 101rpx;
  margin-bottom: 102rpx;
}

.userinfo-avatar {
  overflow: hidden;
  width: 200rpx;
  height: 200rpx;
  margin: 20rpx;
  border-radius: 50%;
}

/* 箭头样式 */
.right_arrow{
  border:solid black;
  border-width: 0 3px 3px 0;
  padding: 3px;
  position: absolute;
  right: 15px;
  transform: rotate(-45deg);
  -webkit-transform: rotate(-45deg);
}

.item{
  width: 100%;
  display: flex;
  flex-direction: row;
  padding: 40rpx;
  align-items: center;
  border-bottom: 1px solid gainsboro;
  background-color: white;
}

.text{
  font-weight:bolder;
}

.button {
  width: 100%;
  background: white;
  padding: 0px;
  margin: 0px;
  border: none;
  text-align: left;
  line-height: 1.5;
  font-size: 16px;
  font-weight:bolder;
}

/*  下面是关键去除边框 */
.button::after {
  border: none;
  border-radius: 0;
}
